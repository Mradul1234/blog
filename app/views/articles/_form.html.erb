<div class="row">
  <div class="col-md-6 col-md-offset-4">
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@article.errors.count, "error") %> prohibited this signup from being saved:</h2>

        <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    </div>
  </div>

<div role="main" class="main">
          <div class="container">
              <div class="row featured-boxes login">
                <div class="col-md-6 col-md-offset-3">
                  <div class="featured-box  default info-content">
                    <div class="box-content">
                      <h4>New Article</h4>
                      
                      <%= form_with(model: article, local: true) do |form| %>
                        <div class="row">
                          
                            <div class="col-md-12">
                              <label>Title</label>
                              <%= form.text_field :title, class: "form-control shadow rounded",style:"width: 460px", placeholder: "Title " %>
                            </div>
                          
                        </div>
                        <div class="row">
                          
                            <div class="col-md-12">
                              
                               
                              <label>Description</label>
                              <%= form.text_area :description, class: "form-control shadow rounded",style:"width: 460px", placeholder: "Description" %>
                            </div>
                          
                        </div>
                        <div class="row">
                          <div class="col-md-6">
                            <span class="remember-box checkbox">
                            </span>
                          </div>
                        

                          <div class="col-md-6"><br>
                            
                            <%= form.submit "Add", class: "btn btn-primary pull-right push-bottom" %>
                          </div>
                      <% end %>
                        </div>
                  
                    </div>
                  </div>
                

            </div>
          </div>


