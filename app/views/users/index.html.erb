<h1 class="text-center mt-4">Alpha Bloggers</h1>


    <div class="container">
    <% @users.each do |user| %>
      <div class="container">

            <div class="row">
              <div class="col-md-9">
                <div class="blog-posts">

                  <article class="post post-large">
                    <div class="post-image">
                      <div class="owl-carousel" data-plugin-options='{"items":1}'>
                        <div>
                          <div class="img-thumbnail">
                             
                            <%= image_tag("img/logo.png", class:"img-responsive") %>
                          </div>
                        </div>
                        <div>
                          <div class="img-thumbnail">
                            
                            <%= image_tag("img/blog/blog-image-2.jpg", class:"img-responsive") %>
                          </div>
                        </div>
                      </div>
                    </div>

                    <%= image_tag(user.avatar,  size: "150x150") if user.avatar.attached? %>
                    <div class="post-date">
                    <span class="day"><%= user.created_at.strftime('%d') %></span>
                    <span class="month"><%= user.created_at.strftime("%B") %></span>
                    </div>

                    <div class="post-content">
                      
                      <h2><%= link_to user.username, user %></h2>
                      
                      <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                      <div class="post-meta">
                        <span><i class="icon icon-user"></i> User <%= link_to user.username, user %></span>
                        <span><i class="icon icon-time"></i> Joined <%= time_ago_in_words(user.created_at) %> ago</span>
                        
                        <%= link_to "View profile", user, class: "btn btn-outline-success pull-right" %>
                        <% if logged_in? %>
                          <% if user == current_user %>
                            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info pull-right" %>
                          <% end %>
                          
                          <% if can? :destroy, User %>
                            <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger pull-right", method: :delete,
                            data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
                          <% end %>
                        <% end %> 
                      </div>

                    </div>
                  </article>

                </div>
              </div>
            </div>
          </div>
    <% end %>
</div>
             
<div class="flickr_pagination pull-right mb-4">
  <%= will_paginate @articles, :container => false %>
</div>