<h1 class="text-center mt-4">groups</h1>

 
 <div class="container">
  <% @groups.each do |group| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to group.name, group_path(group), class: "text-success" %></h5>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(group.created_at) %> ago, 
            edited <%= time_ago_in_words(group.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>