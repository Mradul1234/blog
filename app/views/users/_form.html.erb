
<!-- <span id="helpBlock" class="help-block"></span> -->
<div id="block">


    <div class="row">

    <div class="col-md-6 col-md-offset-3" id="dv">
      <div class="featured-box  default info-content ">
        <div class="box-content">

          <h4>Register An Account</h4>
          <%= form_with(model: @user ,url: signup_path ,remote: true) do |form| %>
            <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :username ,class:"pull-left"%><br>
                   
                  <%= form.text_field :username ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'username' %>
                  
                </div>
            
            </div>
            <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :first_name ,class:"pull-left"%><br>
                   
                  <%= form.text_field :first_name ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'first_name' %>
                </div>
            
            </div>

            <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :last_name ,class:"pull-left"%><br>
                   
                  <%= form.text_field :last_name ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'last_name' %>
                </div>
            
            </div>

            <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :email ,class:"pull-left"%><br>
                  <% if @user.new_record? %>
                    <%= form.text_field :email ,class:"form-control",style:"width: 565px"%><br>
                  <% else %>
                    <%= form.text_field :email ,class:"form-control",style:"width: 565px", disabled:"true"%><br>
                    
                  <% end %>
                  <%= render 'field_error' ,field_name: 'email' %>
                </div>
              
            </div>

          <% if @user.new_record? %>
            <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :password ,class:"pull-left"%><br>
                  
                  <%= form.password_field :password ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'password' %>
                </div>
            </div>
          <% end %>  
          

          <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :phone_no ,class:"pull-left"%><br>
                   
                  <%= form.phone_field :phone_no ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'phone_no' %>
                </div>
              
            </div>

            <div class="row">
              
                <div class="col-md-12">
                  
                  <%= form.label :zip_code ,class:"pull-left"%><br>
                   
                  <%= form.number_field :zip_code ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'zip_code' %>
                </div>
              
            </div>

            <div class="row">
              
                <div class="col-md-12">
                  <%= form.label :description ,class:"pull-left"%><br>
                   
                  <%= form.text_area :description ,class:"form-control",style:"width: 565px"%><br>
                  <%= render 'field_error' ,field_name: 'description' %>
                </div>
              
            </div>

            <div class="row">
              
                <div class="row" style="margin-left: 18px; margin-top: 15px; font-size:15px">
                
                  <%= form.label :gender %> &nbsp;&nbsp;&nbsp;
                   <%= form.radio_button(:gender , "Male")%>&nbsp;<%= form.label(:gender, "Male")%> &nbsp;&nbsp;
                   <%= form.radio_button(:gender , "Female")%>&nbsp;<%= form.label(:gender, "Female")%>
                   
                   <%= render 'field_error' ,field_name: 'gender' %>
                </div>
                
            
            </div>
            

            
            <div class="row">
                
                <div class="col-md-12">

                  <%= form.label :Profile_Photo ,class:"pull-left"%><br>
                   
                  <%= form.file_field :avatar ,class:"form-control"%>
                </div>
              
            </div>

            <div class="row">
              <div class="col-md-12"><br>
               
                <%= form.submit(@user.new_record? ? "SIGN UP" : "update Account" , class:"btn btn-primary pull-right push-bottom") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
</div>